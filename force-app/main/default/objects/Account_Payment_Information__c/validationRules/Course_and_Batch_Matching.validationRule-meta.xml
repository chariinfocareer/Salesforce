<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Course_and_Batch_Matching</fullName>
    <active>true</active>
    <errorConditionFormula>Course__c != Batch__r.Course__c   &amp;&amp;   !ISBLANK(  Batch__c )</errorConditionFormula>
    <errorDisplayField>Batch__c</errorDisplayField>
    <errorMessage>Oops! This Batch must correspond to the Course the participant has enrolled for.</errorMessage>
</ValidationRule>
