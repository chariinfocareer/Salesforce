<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Next_Payment_Date_Validation_Rule</fullName>
    <active>true</active>
    <errorConditionFormula>AND( !ISBLANK( Next_Payment_Date__c ) ,( Next_Payment_Date__c  &lt;=  TODAY() ))</errorConditionFormula>
    <errorDisplayField>Next_Payment_Date__c</errorDisplayField>
    <errorMessage>Next Payment Cannot be Today or Less</errorMessage>
</ValidationRule>
